<div id="<%= dom_id contact %>" class="w-full sm:w-auto my-5 space-y-3">
  
  <% if contact.email.present? %>
    <div class="flex items-center gap-2 text-gray-700 dark:text-gray-300">
      <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
      </svg>
      <a href="mailto:<%= contact.email %>" class="hover:text-blue-600 dark:hover:text-blue-400">
        <%= contact.email %>
      </a>
    </div>
  <% end %>

  <% if contact.phone.present? %>
    <div class="flex items-center gap-2 text-gray-700 dark:text-gray-300">
      <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
      </svg>
      <a href="tel:<%= contact.phone %>" class="hover:text-blue-600 dark:hover:text-blue-400">
        <%= contact.phone %>
      </a>
    </div>
  <% end %>

  <% if contact.company.present? %>
    <div class="flex items-center gap-2 text-gray-700 dark:text-gray-300">
      <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
      </svg>
      <span><%= contact.company %></span>
    </div>
  <% end %>

  <% if contact.birthday.present? %>
    <div class="flex items-center gap-2 text-gray-700 dark:text-gray-300">
      <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <span><%= contact.birthday.strftime("%d.%m.%Y") %></span>
    </div>
  <% end %>

</div>
