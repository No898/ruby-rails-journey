<% content_for :title, "Nová poznámka" %>

<div class="w-full max-w-2xl mx-auto">
  
  <!-- Breadcrumbs -->
  <nav class="mb-6">
    <ol class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
      <li>
        <%= link_to notes_path, class: "hover:text-gray-700 dark:hover:text-gray-200" do %>
          Poznámky
        <% end %>
      </li>
      <li class="flex items-center">
        <svg class="w-4 h-4 mx-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="font-medium text-gray-900 dark:text-white">Nová poznámka</span>
      </li>
    </ol>
  </nav>
  
  <!-- Header -->
  <div class="mb-6">
    <h1 class="font-bold text-4xl text-gray-900 dark:text-white flex items-center gap-3">
      <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
      Nová poznámka
    </h1>
  </div>

  <!-- Form Card -->
  <div class="bg-white dark:bg-gray-800 p-6 rounded-xl border border-gray-200 dark:border-gray-700">
    <%= render "form", note: @note %>
  </div>

  <!-- Navigation -->
  <div class="mt-4 text-center">
    <%= render ButtonComponent.new(text: "Zpět na poznámky", href: notes_path, variant: :secondary) %>
  </div>
</div>
