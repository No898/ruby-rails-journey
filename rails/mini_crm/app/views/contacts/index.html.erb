<% content_for :title, "Contacts" %>

<div class="w-full">

  <% if notice.present? %>
    <%= render NoticeComponent.new(message: notice, type: :success) %>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl text-gray-900 dark:text-white">Contacts</h1>
    <%= render ButtonComponent.new(text: "New contact", href: new_contact_path) %>
  </div>

  <%= form_with url: contacts_path, method: :get, local: true do |form| %>
    <div class="flex flex-wrap gap-2 mb-4">
      <%= form.text_field :query,
          placeholder: "Search by name, email, or company...",
          value: params[:query],
          class: "w-full max-w-md px-3 py-2 border rounded-md text-black dark:text-white dark:bg-gray-800 border-gray-300 dark:border-gray-600" %>
      <%= form.submit "Search",
          class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <div class="flex gap-2 mb-6">
    <%= link_to "All contacts", contacts_path, class: "px-4 py-2 rounded-md font-semibold #{'bg-blue-600 text-white' unless @show_active_only} bg-gray-200 dark:bg-gray-700 dark:text-white" %>
    <%= link_to "Active only", contacts_path(active: 1), class: "px-4 py-2 rounded-md font-semibold #{'bg-blue-600 text-white' if @show_active_only} bg-gray-200 dark:bg-gray-700 dark:text-white" %>
  </div>

  <div id="contacts" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% if @contacts.any? %>
      <% @contacts.each do |contact| %>
        <div class="flex flex-col justify-between h-full p-5 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl shadow-sm hover:shadow-md transition">

          <!-- Top row: Name + Active/Inactive badge -->
          <div class="flex justify-between items-center mb-2">
            <h2 class="text-xl font-semibold text-gray-900 dark:text-white"><%= contact.name %></h2>
            <% if contact.active? %>
              <span class="text-xs font-medium px-2 py-1 bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300 rounded">Active</span>
            <% else %>
              <span class="text-xs font-medium px-2 py-1 bg-gray-200 text-gray-800 dark:bg-gray-700 dark:text-gray-300 rounded">Inactive</span>
            <% end %>
          </div>

          <!-- Rendered contact partial -->
          <%= render contact %>

          <!-- Note statistics -->
          <div class="text-sm text-gray-600 dark:text-gray-300 mt-2">
            <p><strong>Notes:</strong> <%= contact.notes.count %></p>
            <% if contact.notes.any? %>
              <p><strong>Last note:</strong> <%= truncate(contact.notes.order(created_at: :desc).first.content, length: 100) %></p>
            <% end %>
          </div>

          <!-- Action buttons -->
          <div class="mt-4 flex flex-col sm:flex-row gap-2">
            <%= render ButtonComponent.new(text: "Show", href: contact, variant: :secondary) %>
            <%= render ButtonComponent.new(text: "Edit", href: edit_contact_path(contact), variant: :secondary) %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10 text-gray-700 dark:text-gray-300">No contacts found.</p>
    <% end %>
  </div>
</div>
