<% content_for :title, "Contacts" %>

<div class="w-full">

  <% if notice.present? %>
    <%= render NoticeComponent.new(message: notice, type: :success) %>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Contacts</h1>
    <%= render ButtonComponent.new(text: "New contact", href: new_contact_path) %>
  </div>

  <div class="mb-4">
    <%= form_with url: contacts_path, method: :get, local: true do |form| %>
      <div class="flex mt-5 gap-2">
        <%= form.text_field :q, placeholder: "Search contacts...", class: "border rounded px-3 py-2 w-[50%] lg:w-[20%] dark:bg-gray-700 dark:text-white dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400" %>
        <%= render ButtonComponent.new(text: "Search", type: :submit) %>
      </div>
    <% end %>
  </div>

  <div id="contacts" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
    <% if @contacts.any? %>
      <% @contacts.each do |contact| %>
        <div class="flex flex-col justify-between h-full p-5 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl shadow-sm hover:shadow-md transition">

          <!-- Kontakt samotný -->
          <%= render contact %>

          <!-- Tlačítka -->
          <div class="mt-4 flex flex-col sm:flex-row gap-2">
            <%= render ButtonComponent.new(text: "Show", href: contact, variant: :secondary) %>

            <%= render ButtonComponent.new(text: "Edit", href: edit_contact_path(contact), variant: :secondary) %>

            <%= render ButtonComponent.new(text: "Destroy", href: contact, variant: :danger, type: :button, data: { turbo_confirm: "Are you sure?" }) %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No contacts found.</p>
    <% end %>
  </div>
</div>
