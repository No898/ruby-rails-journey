<%= form_with(model: contact, class: "space-y-6") do |form| %>
  
  <!-- Error messages -->
  <% if contact.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-600 dark:text-red-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
          <h3 class="text-red-800 dark:text-red-200 font-medium mb-2">
            <%= contact.errors.count == 1 ? "1 chyba" : "#{contact.errors.count} chyb" %> zabránila uložení kontaktu:
          </h3>
          <ul class="text-red-700 dark:text-red-300 text-sm space-y-1">
            <% contact.errors.each do |error| %>
              <li class="flex items-center gap-2">
                <span class="w-1 h-1 bg-red-500 rounded-full"></span>
                <%= error.full_message %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Name field -->
  <div class="space-y-2">
    <%= form.label :name, "Jméno", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
      </svg>
      Jméno *
    <% end %>
    
    <%= form.text_field :name, 
        placeholder: "Zadejte celé jméno kontaktu",
        class: [
          "block w-full px-3 py-2 border rounded-lg shadow-sm transition-colors",
          "focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          "dark:bg-gray-700 dark:text-white dark:placeholder-gray-400",
          contact.errors[:name].none? ? 
            "border-gray-300 dark:border-gray-600" : 
            "border-red-300 dark:border-red-600 focus:ring-red-500 focus:border-red-500"
        ] %>
    
    <% if contact.errors[:name].any? %>
      <p class="text-sm text-red-600 dark:text-red-400 flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <%= contact.errors[:name].first %>
      </p>
    <% end %>
  </div>

  <!-- Email field -->
  <div class="space-y-2">
    <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
      </svg>
      Email
    <% end %>
    
    <%= form.email_field :email, 
        placeholder: "kontakt@example.com",
        class: [
          "block w-full px-3 py-2 border rounded-lg shadow-sm transition-colors",
          "focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          "dark:bg-gray-700 dark:text-white dark:placeholder-gray-400",
          contact.errors[:email].none? ? 
            "border-gray-300 dark:border-gray-600" : 
            "border-red-300 dark:border-red-600 focus:ring-red-500 focus:border-red-500"
        ] %>
    
    <% if contact.errors[:email].any? %>
      <p class="text-sm text-red-600 dark:text-red-400 flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <%= contact.errors[:email].first %>
      </p>
    <% end %>
  </div>

  <!-- Phone field -->
  <div class="space-y-2">
    <%= form.label :phone, "Telefon", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
      </svg>
      Telefon
    <% end %>
    
         <%= form.telephone_field :phone, 
         placeholder: "+420 123 456 789",
        class: [
          "block w-full px-3 py-2 border rounded-lg shadow-sm transition-colors",
          "focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          "dark:bg-gray-700 dark:text-white dark:placeholder-gray-400",
          contact.errors[:phone].none? ? 
            "border-gray-300 dark:border-gray-600" : 
            "border-red-300 dark:border-red-600 focus:ring-red-500 focus:border-red-500"
        ] %>
    
    <% if contact.errors[:phone].any? %>
      <p class="text-sm text-red-600 dark:text-red-400 flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <%= contact.errors[:phone].first %>
      </p>
    <% end %>
  </div>

  <!-- Company field -->
  <div class="space-y-2">
    <%= form.label :company, "Firma", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
      </svg>
      Firma
    <% end %>
    
    <%= form.text_field :company, 
        placeholder: "Název firmy nebo organizace",
        class: [
          "block w-full px-3 py-2 border rounded-lg shadow-sm transition-colors",
          "focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          "dark:bg-gray-700 dark:text-white dark:placeholder-gray-400",
          contact.errors[:company].none? ? 
            "border-gray-300 dark:border-gray-600" : 
            "border-red-300 dark:border-red-600 focus:ring-red-500 focus:border-red-500"
        ] %>
    
    <% if contact.errors[:company].any? %>
      <p class="text-sm text-red-600 dark:text-red-400 flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <%= contact.errors[:company].first %>
      </p>
    <% end %>
  </div>

  <!-- Birthday field -->
  <div class="space-y-2">
    <%= form.label :birthday, "Datum narození", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      Datum narození
    <% end %>
    
    <%= form.date_field :birthday, 
        class: [
          "block w-full px-3 py-2 border rounded-lg shadow-sm transition-colors",
          "focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          "dark:bg-gray-700 dark:text-white dark:placeholder-gray-400",
          contact.errors[:birthday].none? ? 
            "border-gray-300 dark:border-gray-600" : 
            "border-red-300 dark:border-red-600 focus:ring-red-500 focus:border-red-500"
        ] %>
    
    <% if contact.errors[:birthday].any? %>
      <p class="text-sm text-red-600 dark:text-red-400 flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <%= contact.errors[:birthday].first %>
      </p>
    <% end %>
  </div>

  <!-- Active checkbox -->
  <div class="space-y-2">
    <div class="flex items-center gap-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
      <%= form.check_box :active, 
          id: "contact_active", 
          class: "h-5 w-5 text-blue-600 bg-white border-gray-300 rounded focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 cursor-pointer" %>
      <%= form.label :active, "Tento kontakt je aktivní", 
          for: "contact_active", 
          class: "text-gray-800 dark:text-white cursor-pointer flex items-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Tento kontakt je aktivní
      <% end %>
    </div>
    <p class="text-xs text-gray-500 dark:text-gray-400">Neaktivní kontakty se nezobrazují v hlavním seznamu</p>
  </div>

  <!-- Submit button -->
  <div class="flex items-center justify-between pt-4 border-t border-gray-200 dark:border-gray-700">
    <div class="flex items-center gap-3">
      <%= render ButtonComponent.new(
        text: form.object.persisted? ? 'Uložit změny' : 'Vytvořit kontakt', 
        variant: :primary,
        type: :submit
      ) %>
      
      <% if form.object.persisted? %>
        <%= render ButtonComponent.new(
          text: 'Zrušit',
          href: contact_path(@contact),
          variant: :secondary
        ) %>
      <% else %>
        <%= render ButtonComponent.new(
          text: 'Zpět na kontakty',
          href: contacts_path,
          variant: :secondary
        ) %>
      <% end %>
    </div>

    <% if form.object.persisted? %>
      <%= render ButtonComponent.new(
        text: 'Smazat kontakt',
        href: contact_path(@contact),
        variant: :danger,
        method: :delete,
        data: { turbo_confirm: "Opravdu smazat tento kontakt?" }
      ) %>
    <% end %>
  </div>

<% end %>
