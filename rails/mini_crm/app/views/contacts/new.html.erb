<% content_for :title, "Nový kontakt" %>

<div class="w-full max-w-2xl mx-auto">
  
  <!-- Header -->
  <div class="mb-6">
    <h1 class="font-bold text-4xl text-gray-900 dark:text-white flex items-center gap-3">
      <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
      Nový kontakt
    </h1>
    <p class="text-gray-600 dark:text-gray-400 mt-2">Vyplňte základní informace o novém kontaktu</p>
  </div>

  <!-- Form Card -->
  <div class="bg-white dark:bg-gray-800 p-6 rounded-xl border border-gray-200 dark:border-gray-700">
    <%= render "form", contact: @contact %>
  </div>

  <!-- Navigation -->
  <div class="mt-4 text-center">
    <%= render ButtonComponent.new(text: "Zpět na kontakty", href: contacts_path, variant: :secondary) %>
  </div>
</div>
