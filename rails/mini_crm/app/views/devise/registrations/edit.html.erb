<%# /views/devise/registrations/edit.html.erb %>
<% content_for :title, "Edit account" %>

<div class="max-w-md w-full mx-auto mt-10 bg-white dark:bg-gray-900 shadow-md dark:shadow-lg rounded-lg p-6 space-y-6">
  <h1 class="text-2xl font-bold text-gray-800 dark:text-white">Edit your account</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block font-medium text-sm text-gray-700 dark:text-gray-200" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md shadow-sm bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-gray-600 dark:text-gray-400">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div>
      <%= f.label :password, class: "block font-medium text-sm text-gray-700 dark:text-gray-200" %>
      <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">(leave blank if you don't want to change it)</p>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md shadow-sm bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block font-medium text-sm text-gray-700 dark:text-gray-200" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md shadow-sm bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :current_password, class: "block font-medium text-sm text-gray-700 dark:text-gray-200" %>
      <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">(we need your current password to confirm your changes)</p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md shadow-sm bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= render ButtonComponent.new(text: "Update", type: :submit, classes: "w-full") %>
    </div>
  <% end %>

  <div class="mt-6 text-sm text-gray-600 dark:text-gray-400">
    <h3 class="font-medium mb-2 text-gray-800 dark:text-white">Cancel my account</h3>
    <div>
      <%= render ButtonComponent.new(text: "Cancel my account", href: registration_path(resource_name), method: :delete, variant: :danger, classes: "w-full sm:w-auto") %>
    </div>
  </div>

  <div class="mt-4 text-center">
    <%= render ButtonComponent.new(text: "Back", href: root_path, variant: :link) %>
  </div>
</div>
