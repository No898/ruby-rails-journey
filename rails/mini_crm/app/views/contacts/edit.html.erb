<% content_for :title, "Editing contact" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing contact</h1>

  <%= render "form", contact: @contact %>

  <div class="flex items-center gap-x-4 mt-4">
    <%= render ButtonComponent.new(text: "Show this contact", href: @contact, variant: :secondary) %>

    <%= render ButtonComponent.new(text: "Back to contacts", href: contacts_path, variant: :secondary) %>
  </div>

</div>
